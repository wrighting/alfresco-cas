<?xml version='1.0' encoding='UTF-8'?>
<web-fragment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xmlns:webfragment="http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
	id="wrighting_alfresco_platform_cas_amp" version="3.0" metadata-complete="true">

	<name>wrighting_alfresco_platform_cas_amp</name>

	<context-param>
		<param-name>configurationStrategy</param-name>
		<param-value>${java.cas.client.config.strategy}</param-value>
	</context-param>

	<context-param>
		<param-name>configFileLocation</param-name>
		<param-value>${java.cas.client.config.location}</param-value>
	</context-param>

	<!-- Only applies to other web-fragments not web.xml -->
	<ordering>
		<before>
			<others />
		</before>
	</ordering>

	<filter>
		<description></description>
		<filter-name>CAS Authentication Filter</filter-name>
		<filter-class>org.wrighting.alfresco.repo.web.filter.beans.ConditionalBeanProxyFilter</filter-class>
		<init-param>
			<param-name>evaluatorBeanName</param-name>
			<param-value>authenticationEvaluator</param-value>
		</init-param>
		<init-param>
			<param-name>filterClass</param-name>
			<param-value>org.jasig.cas.client.authentication.AuthenticationFilter</param-value>
		</init-param>
		<!-- cas-config-web.xml start -->
		<init-param>
			<param-name>casServerLoginUrl</param-name>
			<param-value>${cas.server.prefix}/login</param-value>
		</init-param>
		<init-param>
			<param-name>serverName</param-name>
			<param-value>${share.server.name}</param-value>
		</init-param>
		<!-- cas-config-web.xml end -->
	</filter>
	<filter>
		<filter-name>CAS Validation Filter</filter-name>
		<filter-class>org.jasig.cas.client.validation.Cas20ProxyReceivingTicketValidationFilter</filter-class>
		<!-- cas-config-web.xml start -->
		<init-param>
			<param-name>casServerUrlPrefix</param-name>
			<param-value>${cas.server.prefix}</param-value>
		</init-param>
		<init-param>
			<param-name>serverName</param-name>
			<param-value>${share.server.name}</param-value>
		</init-param>
		<!-- cas-config-web.xml end -->
	</filter>

	<filter>
		<description></description>
		<filter-name>CAS HttpServletRequest Wrapper Filter</filter-name>
		<filter-class>org.wrighting.alfresco.repo.web.filter.beans.ConditionalBeanProxyFilter</filter-class>
		<init-param>
			<param-name>evaluatorBeanName</param-name>
			<param-value>authenticationEvaluator</param-value>
		</init-param>
		<init-param>
			<param-name>filterClass</param-name>
			<param-value>org.jasig.cas.client.util.HttpServletRequestWrapperFilter</param-value>
		</init-param>
	</filter>

	<filter>
		<filter-name>Ignore Filter</filter-name>
		<filter-class>org.wrighting.alfresco.repo.web.filter.beans.IgnoreFlagFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>Ignore Filter</filter-name>
        <url-pattern>/api/-default-/public/authentication/versions/1/tickets</url-pattern>
	</filter-mapping>

	<!--  Ignore patterns that would be auth by the X509AuthFilter -->
	<filter-mapping>
		<filter-name>Ignore Filter</filter-name>
		<url-pattern>/service/api/solr/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>Ignore Filter</filter-name>
		<url-pattern>/s/api/solr/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>Ignore Filter</filter-name>
		<url-pattern>/wcservice/api/solr/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>Ignore Filter</filter-name>
		<url-pattern>/wcs/api/solr/*</url-pattern>
	</filter-mapping>

	<!-- End of X509 -->

    <!-- Used by the share feature -->
    <filter-mapping>
            <filter-name>Ignore Filter</filter-name>
            <url-pattern>/s/api/internal/shared/node/*</url-pattern>
    </filter-mapping>

    <!-- Called by EditionInterceptor -->
    <!--
    <filter-mapping>
            <filter-name>Ignore Filter</filter-name>
            <url-pattern>/s/api/admin/restrictions</url-pattern>
    </filter-mapping>
-->
	<!-- Used for http://localhost:8080/alfresco/s/admin/admin-workflowconsole -->
	<filter-mapping>
		<filter-name>CAS Authentication Filter</filter-name>
		<url-pattern>/s/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>CAS Validation Filter</filter-name>
		<url-pattern>/s/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>CAS HttpServletRequest Wrapper Filter</filter-name>
		<url-pattern>/s/*</url-pattern>
	</filter-mapping>

    <!-- Leave unprotected by CAS SSO - so as to have an option for default behaviour
         It should be OK to use these mappings if any Ignore Filter above is 
         set for /service as well as /s
	<filter-mapping>
		<filter-name>CAS Authentication Filter</filter-name>
		<url-pattern>/service/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CAS Validation Filter</filter-name>
		<url-pattern>/service/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CAS HttpServletRequest Wrapper Filter</filter-name>
		<url-pattern>/service/*</url-pattern>
	</filter-mapping>
    -->

<!-- Although the wcs endpoint is covered by the Global Authentication Filter
things don't work if you include these mappings -->
<!-- 
	<filter-mapping>
		<filter-name>CAS Authentication Filter</filter-name>
		<url-pattern>/wcs/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CAS Validation Filter</filter-name>
		<url-pattern>/wcs/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CAS HttpServletRequest Wrapper Filter</filter-name>
		<url-pattern>/wcs/*</url-pattern>
	</filter-mapping>
-->

	<filter-mapping>
		<filter-name>CAS Authentication Filter</filter-name>
		<url-pattern>/wcservice/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CAS Validation Filter</filter-name>
		<url-pattern>/wcservice/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CAS HttpServletRequest Wrapper Filter</filter-name>
		<url-pattern>/wcservice/*</url-pattern>
	</filter-mapping>


	<filter-mapping>
		<filter-name>CAS Authentication Filter</filter-name>
		<url-pattern>/api/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CAS Validation Filter</filter-name>
		<url-pattern>/api/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CAS HttpServletRequest Wrapper Filter</filter-name>
		<url-pattern>/api/*</url-pattern>
	</filter-mapping>

	<session-config>
		<tracking-mode>COOKIE</tracking-mode>
	</session-config>

</web-fragment>
